<Window x:Class="TSBFTPPortal.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSBFTPPortal.Views"
        mc:Ignorable="d"
        Title="Error!"
				Icon="{StaticResource AppIcon}"
				Height="200" 
				Width="400"
				ResizeMode="NoResize"
				Background="{DynamicResource WindowColor}"
				>
    <Grid>
			
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<ScrollViewer Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0">
			<TextBlock Text="{Binding Message}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Padding="5" />
		</ScrollViewer>

		<Button Content="OK"
						Command="{Binding Okay}"
						CommandParameter="Okay"
						Grid.Column="2"	
						Grid.Row="2"
						Height="25"
						Width="100"/>

	</Grid>
</Window>
