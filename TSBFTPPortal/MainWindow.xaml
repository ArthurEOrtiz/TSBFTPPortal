<Window x:Class="TSBFTPPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSBFTPPortal" xmlns:views="clr-namespace:TSBFTPPortal.Views"
				mc:Ignorable="d"
        Title="TSB FTP Portal" 
				Height="450" 
				Width="600"
				>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock Text="{Binding SelectedCounty.Name}" Grid.Row="0" />
		<views:TabControlMainView Grid.Row="1" DataContext="{Binding TabControlMainViewModel}"/>
	</Grid>
</Window>
